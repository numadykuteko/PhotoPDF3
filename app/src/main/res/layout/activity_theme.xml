<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/content_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/data_list_area"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/apply_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/HuyCommonButtonStyle"
                android:layout_marginStart="@dimen/common_margin_top_big"
                android:layout_marginEnd="@dimen/common_margin_top_big"
                android:layout_marginTop="@dimen/common_margin_top"
                android:layout_marginBottom="@dimen/common_margin_top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/theme_apply"
                    android:textColor="@color/whiteTotally"
                    android:textSize="@dimen/title_second_component_text_size"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>