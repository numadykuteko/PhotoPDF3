<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    android:background="@drawable/bg_dialog_common"
    android:layout_gravity="center">

    <TextView
        style="@style/HuyCommonTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/select_converter_title"
        android:textSize="@dimen/title_first_component_text_size"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/select_converter_itp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            tools:ignore="ContentDescription">

            <ImageView
                android:id="@+id/select_converter_itp_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_select_converter_image_to_pdf" />

            <ImageView
                android:id="@+id/select_converter_itp_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_select_converter_checked"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/select_converter_itp_textview"
                style="@style/HuyCommonTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@id/select_converter_itp_checked"
                app:layout_constraintStart_toEndOf="@id/select_converter_itp_imageview"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/select_converter_img_to_pdf"
                android:textSize="@dimen/title_second_component_text_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/select_converter_ttp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            tools:ignore="ContentDescription">

            <ImageView
                android:id="@+id/select_converter_ttp_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_select_converter_text_to_pdf" />

            <ImageView
                android:id="@+id/select_converter_ttp_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_select_converter_checked"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/select_converter_ttp_textview"
                style="@style/HuyCommonTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@id/select_converter_ttp_checked"
                app:layout_constraintStart_toEndOf="@id/select_converter_ttp_imageview"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/select_converter_text_to_pdf"
                android:textSize="@dimen/title_second_component_text_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/select_converter_etp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:layout_marginBottom="@dimen/common_margin_top_small"
            tools:ignore="ContentDescription">

            <ImageView
                android:id="@+id/select_converter_etp_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_select_converter_excel_to_pdf" />

            <ImageView
                android:id="@+id/select_converter_etp_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_select_converter_checked"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/select_converter_etp_textview"
                style="@style/HuyCommonTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@id/select_converter_etp_checked"
                app:layout_constraintStart_toEndOf="@id/select_converter_etp_imageview"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/select_converter_excel_to_pdf"
                android:textSize="@dimen/title_second_component_text_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>