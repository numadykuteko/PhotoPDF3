<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/first_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/first_view_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_purchase_3"
                android:scaleType="centerCrop"/>
            
            <TextView
                android:id="@+id/first_view_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_main_component_text_size"
                android:textColor="@color/redLight"
                android:layout_marginTop="@dimen/common_margin_top_big"
                android:text="@string/purchase_introduce_1"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/first_view_continue"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:cardCornerRadius="@dimen/common_margin_top"
                app:cardBackgroundColor="@color/redLight"
                android:layout_marginTop="50dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/continue_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title_main_component_text_size"
                            android:text="@string/purchase_continue"
                            android:textColor="@color/white_totally"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/continue_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_purchase_continue"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/common_margin_top"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/shine"
                        android:layout_width="40dp"
                        android:layout_height="88dp"
                        android:layout_marginTop="-15dp"
                        android:layout_marginStart="-40dp"
                        android:background="@drawable/bg_shine"
                        android:rotation="20" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ScrollView
            android:id="@+id/second_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/white_totally"
            tools:ignore="ContentDescription, UseCompoundDrawables">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                tools:ignore="ContentDescription">

                <TextView
                    style="@style/HuyCommonTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/first_open_pdf_converter"
                    android:textSize="30sp" />

                <TextView
                    style="@style/HuyCommonTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/first_open_pdf_converter_hint"
                    android:textColor="@color/text_primary_50"
                    android:textSize="14sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:verticalSpacing="8dp"
                    android:horizontalSpacing="8dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="48dp">

                    <LinearLayout
                        android:id="@+id/layout_first_open_converter_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/HuyCommonLayoutGridStyle">

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_first_open_image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HuyCommonTextStyle"
                            android:text="@string/first_open_pdf_converter_image"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_first_open_converter_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/HuyCommonLayoutGridStyle">

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_first_open_note"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HuyCommonTextStyle"
                            android:text="@string/first_open_pdf_converter_note"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_first_open_converter_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/HuyCommonLayoutGridStyle">

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_first_open_receipt"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HuyCommonTextStyle"
                            android:text="@string/first_open_pdf_converter_receipt"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_first_open_converter_sheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/HuyCommonLayoutGridStyle">

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_first_open_sheet"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HuyCommonTextStyle"
                            android:text="@string/first_open_pdf_converter_sheet"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_first_open_converter_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/HuyCommonLayoutGridStyle">

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_first_open_id_card"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HuyCommonTextStyle"
                            android:text="@string/first_open_pdf_converter_id_card"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_first_open_converter_certificate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/HuyCommonLayoutGridStyle">

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_first_open_certificate"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HuyCommonTextStyle"
                            android:text="@string/first_open_pdf_converter_certificated"
                            android:gravity="center"/>

                    </LinearLayout>

                </GridLayout>

                <Button
                    android:id="@+id/button_first_open_converter_select_photos"
                    style="@style/HuyCommonButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/first_open_pdf_converter_select_photos"
                    android:textStyle="bold"
                    android:paddingStart="64dp"
                    android:paddingEnd="64dp" />

                <TextView
                    android:id="@+id/button_first_open_converter_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HuyCommonTextStyle"
                    android:text="@string/first_open_pdf_converter_skip"
                    android:textColor="@color/text_primary_50"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

        </ScrollView>
    </FrameLayout>

</layout>
