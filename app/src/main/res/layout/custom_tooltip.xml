<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_big">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:textStyle="bold"
        android:textSize="@dimen/title_second_component_text_size"
        android:textColor="@color/black_totally"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_text"
        android:textSize="15sp"
        android:textColor="@color/black_totally"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/title_second_component_text_size"
        android:textColor="@color/orange_theme_color"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />
</LinearLayout>