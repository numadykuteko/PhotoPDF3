<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/item_description_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_split_by_page_item" />

    <ImageView
        android:id="@+id/item_option_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_select_remove_full"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_destination_page_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_split_by_page_item_number"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        style="@style/HuyCommonTextStyle"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        tools:text="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>