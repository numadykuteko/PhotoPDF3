<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_content_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_setting_view_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_blue_theme"
    android:layout_marginBottom="@dimen/common_padding_big"
    android:layout_marginTop="@dimen/common_padding_big">

    <View
        android:id="@+id/item_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteTotally"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.3"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_checkbox_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="false"
        android:focusable="false"
        style="@style/checkbox_style"
        android:buttonTint="@color/white_totally"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/common_margin_top"/>

    <TextView
        android:id="@+id/item_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteTotally"
        android:textSize="@dimen/title_first_component_text_size"
        android:text=""
        android:layout_marginStart="@dimen/common_margin_top"
        app:layout_constraintStart_toEndOf="@id/item_checkbox_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>